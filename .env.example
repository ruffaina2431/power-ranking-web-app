# Example environment variables for local development
# Copy to .env and edit values as needed

# Flask secret key (change in production)
SECRET_KEY=replace_with_a_secret_key

# Database URI examples (choose one):
# MySQL (default in this project):
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_HOST=localhost
MYSQL_DB=esports_tournament
# Full SQLAlchemy URI if you prefer to set it directly:
# SQLALCHEMY_DATABASE_URI=mysql+pymysql://root:@localhost/esports_tournament

# Or use SQLite for quick local testing:
# SQLALCHEMY_DATABASE_URI=sqlite:///esports_dev.db

# Optional: enable debug mode (True/False)
FLASK_DEBUG=True
